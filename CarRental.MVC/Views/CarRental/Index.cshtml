@model IEnumerable<CarRental.Application.CarRental.CarsDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Cars</h1>

<a class="btn btn-outline-secondary" asp-controller="CarRental" asp-action="Create">Add new Car</a>

<hr/>

@foreach (var item in Model)
{
     <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">@item.Brand @item.Name</h5>
       
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">@item.Description</li>
        <li class="list-group-item"> <b>Price:</b> @item.Price @item.Currency</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Rent</a>
        <a  asp-controller="CarRental" asp-action="Details" asp-route-id ="@item.Id" class="card-link">More Details</a>
            <a asp-controller="CarRental" asp-action="Edit" asp-route-id ="@item.Id"class="card-link">Edit</a>
      </div>
    </div>
}



<div>
  
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
